<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeCollectFireBase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hotpink</item>
        <item name="colorPrimaryVariant">@color/darkpurple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/hotpink</item>
        <item name="android:navigationBarColor">@color/hotpink</item>
        <!-- Customize your theme here. -->

    </style>
    
    <style name="NightModeSwitch" parent="Theme.AppCompat.Light">

        <item name="colorControlActivated">@color/darkpurple</item>
        <item name="colorSwitchThumbNormal">#FFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="Text_settings">
        <item name="android:textColor">#000</item>
    </style>

    <style name="settings_box">
        <item name="android:background">#af3996</item>
    </style>

    <style name="arrow">
        <item name="android:background">#000</item>
    </style>

    <style name="Text_register">
        <item name="android:textColor">#af3996</item>
    </style>

    <style name="Button_register">
        <item name="android:backgroundTint">#af3996</item>
    </style>

    <style name="Button_add">
        <item name="android:backgroundTint">#af3996</item>
    </style>

    <style name="Text_add">
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#99000000</item>
    </style>

    <style name="ITEM">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ITEM_TEXT">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="COLOR_TEXT">
        <item name="android:textColor">@color/hotpink</item>
    </style>

    <style name="INPUT_TEXT">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/transdarkpurple</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

    <style name="LOGIN_INPUT_TEXT">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/transdarkpurple</item>
        <item name="android:background">@drawable/custom_edittext</item>
    </style>

    <style name="BUTTON">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/hotpink</item>
        <item name="background">@drawable/custom_button</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">@color/white</item>
    </style>

    <style name="DROP_DOWN_BOX" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/hotpink</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

</resources>



